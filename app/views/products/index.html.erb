
<table class="table">
  <thead>
    <tr>
      <th>Product name</th>
      <th>Category name</th>
      <th>Product price</th>
      <th>Product description</th>
      <th>Quantity</th>
      <th>Edit</th>
      <th>Show</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.category.category_name %></td>
        <td><%= product.product_price %></td>
        <td><%= product.product_description %></td>
        <td><%= product.quantity %></td>
        <td><%= button_to 'Edit', edit_product_path(product.id), method: :get %></td>
        <td><%= button_to 'Show', product_path(product.id), method: :get %></td>
        <td><%= button_to 'Delete', product_path(product.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= button_to 'New Product', new_product_path, method: :get %>
