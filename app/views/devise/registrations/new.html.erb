<h2></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <p>
    <b>Signup As</b><br />
    <%= f.radio_button :user_type, 'saler' %> Seller<br />
    <%= f.radio_button :user_type, 'buyer' %> Buyer<br />
</p>
  </div>

  <div class="field">
    <%= f.label :first_Name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "First Name" %>
  </div>

  <div class="field">
    <%= f.label :last_Name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "Last Name" %>
  </div>

   <div class="field">
    <%= f.label :phonenum %><br />
    <%= f.telephone_field :phonenum, autofocus: true, autocomplete: "Mobile Number" %>
  </div>

  <div class="field">
    <%= f.label :houseno %><br />
    <%= f.text_field :houseno, autofocus: true, autocomplete: "House Number" %>
  </div>

  <div class="field">
    <%= f.label :shippingaddress %><br />
    <%= f.text_field :shippingaddress, autofocus: true, autocomplete: "Shipping address" %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autofocus: true, autocomplete: "City" %>
  </div>

  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state, autofocus: true, autocomplete: "State" %>
  </div>

  <div class="field">
    <%= f.label :pincode %><br />
    <%= f.text_field :pincode, autofocus: true, autocomplete: "Pincode" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
 
<% end %>

<%= render "devise/shared/links" %>
