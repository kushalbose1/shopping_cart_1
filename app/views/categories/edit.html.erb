<h1>Edit Category</h1>
<%= form_with(model: @category, url: category_path(@category), method: :put,local: true) do |f| %>
  <p>
    <%= f.label :category_name %><br>
    <%= f.text_field :category_name %>
  </p>
    <p>
    <%= f.label :category_description %><br>
    <%= f.text_field :category_description %>
  </p>
  <p>
    <div class="actions">
    <%= f.submit "edit" %>
    </div>
  </p>
<% end %>
<%= link_to 'Back', categories_path, method: :get %>
